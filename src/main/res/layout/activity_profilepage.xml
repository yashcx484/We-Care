<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="20dp"
        android:background="#D82749B0"

        >


        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:src="@drawable/last"

            />
        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10sp"
            android:src="@drawable/logout"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="5sp"
            android:layout_toEndOf="@+id/profilePic"
            android:layout_toRightOf="@id/profilePic"
            android:text="Profile"
            android:textSize="50sp" />





        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile_icon"
            android:layout_centerVertical="true"/>


        <TextView
            android:id="@+id/fullnameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profileImage"
            android:text="user:12"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            />




    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"

        >

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#D82749B0"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/agepng"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:id="@+id/ageLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:layout_centerInParent="true"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/ageDesc"
                    android:layout_width="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/ageLabel"
                    android:textSize="20sp"
                    />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#D82749B0"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/scale"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:id="@+id/weightLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight"
                    android:includeFontPadding="false"
                    android:layout_centerInParent="true"
                    android:textSize="30sp"
                    />
                <TextView
                    android:id="@+id/weightDesc"
                    android:layout_width="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_height="wrap_content"
                    android:text="51"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/weightLabel"
                    android:textSize="20sp"
                    />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"

        >

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#D82749B0"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/heighticon"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:id="@+id/heightLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="height"
                    android:layout_centerInParent="true"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/heightDesc"
                    android:layout_width="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_height="wrap_content"
                    android:text="170cm"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/heightLabel"
                    android:textSize="20sp"
                    />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#D82749B0"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/useridicon"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:id="@+id/userID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:includeFontPadding="false"
                    android:layout_centerInParent="true"
                    android:textSize="30sp"
                    />
                <TextView
                    android:id="@+id/UserIdDesc"
                    android:layout_width="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/userID"
                    android:textSize="20sp"
                    />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>

</LinearLayout>