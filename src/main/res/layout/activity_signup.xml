<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/animation_list">
            <TextView
                android:id="@+id/text_signup"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="80dp"
                android:text="Fill Signup Information"
                android:textColor="@color/text_view_print"
                android:textSize="20dp"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/email_edit_text_signup"
                    android:layout_width="333dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/edit_text_border"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:gravity="center_horizontal"
                    android:hint="Must Enter Email"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="@color/text_view_print"

                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/password_edit_text_signup"
                    android:layout_width="338dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/edit_text_border"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:gravity="center_horizontal"
                    android:hint=" Must Enter Password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="@color/text_view_print"

                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/gender_edit_text_signup"
                    android:layout_width="338dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/edit_text_border"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:gravity="center_horizontal"
                    android:hint=" Enter Gender"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/text_view_print"

                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/height_edit_text_signup"
                    android:layout_width="338dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/edit_text_border"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:gravity="center_horizontal"
                    android:hint="Height"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/text_view_print"

                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/age_edit_text_signup"
                    android:layout_width="338dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/edit_text_border"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:gravity="center_horizontal"
                    android:hint="Enter age"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/text_view_print"

                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/weight_edit_text_signup"
                    android:layout_width="338dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/edit_text_border"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:gravity="center_horizontal"
                    android:hint="Enter weight"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/text_view_print"

                    android:textSize="20dp" />

                <Button

                    android:id="@+id/sign_up_btn"
                    android:layout_width="274dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/button_base"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:onClick="onSignup"
                    android:text="@string/sign_up_button"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>